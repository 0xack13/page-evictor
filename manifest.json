{
  "manifest_version": 2,

  "name": "Page Evictor",
  "description": "Forcefully request closing pages which exceed the time limit",
  "version": "1.7",
  "author": "sworley@google.com",

  "permissions": [
    "tabs",
    "notifications",
    "background",
    "storage",
    "alarms",
    "*",
    "contextMenus"
  ],
  "icons": {
    "16": "clock16.png",
    "48": "clock48.png",
    "128": "clock128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "browser-action-19.png",
      "38": "browser-action-38.png"
    }
  },
  "background": {
    "scripts": ["common.js", "background.js"],
    "persistent": true
  },
  "options_page": "options.html"
}
